{
    "compilerOptions": {
        "jsx": "preserve",
        "allowJs": true,
        "module": "esnext",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "esModuleInterop": true,
        "lib": ["es2017", "dom"],
        "noEmit": true,
        "allowSyntheticDefaultImports": true,
        "target": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "baseUrl": ".",
        "rootDir": ".",
        "importHelpers": true,
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "next-env.d.ts",
        "next.config.js"
    ],
    "exclude": ["node_modules", "tmp"]
}